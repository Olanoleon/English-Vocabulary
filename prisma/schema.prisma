generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  users     User[]
  areas     Area[]
  sections  Section[]
  areaConfigs    OrganizationAreaConfig[]
  sectionConfigs OrganizationSectionConfig[]

  @@map("organizations")
}

model User {
  id              String                   @id @default(cuid())
  username        String                   @unique
  passwordHash    String                   @map("password_hash")
  role            String                   @default("learner") // "super_admin" | "org_admin" | "learner" (legacy "admin" supported)
  displayName     String                   @map("display_name")
  createdAt       DateTime                 @default(now()) @map("created_at")
  monthlyRate     Float                    @default(0) @map("monthly_rate")
  nextPaymentDue  DateTime?                @map("next_payment_due")
  lastPaymentDate DateTime?                @map("last_payment_date")
  accessOverride  String?                  @map("access_override")
  organizationId  String?                  @map("organization_id")
  attempts        LearnerAttempt[]
  sectionProgress LearnerSectionProgress[]
  payments        Payment[]
  organization    Organization?            @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  @@map("users")
}

model Payment {
  id          String    @id @default(cuid())
  userId      String    @map("user_id")
  amount      Float
  paidAt      DateTime  @default(now()) @map("paid_at")
  note        String?
  periodStart DateTime? @map("period_start")
  periodEnd   DateTime? @map("period_end")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model Area {
  id          String    @id @default(cuid())
  name        String
  nameEs      String    @map("name_es")
  description String?
  imageUrl    String?   @map("image_url")
  sortOrder   Int       @map("sort_order")
  isActive    Boolean   @default(true) @map("is_active")
  scopeType   String    @default("global") @map("scope_type") // "global" | "org"
  organizationId String? @map("organization_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  sections    Section[]
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  orgConfigs   OrganizationAreaConfig[]

  @@map("areas")
}

model Section {
  id                String                   @id @default(cuid())
  title             String
  titleEs           String                   @map("title_es")
  description       String?
  imageUrl          String?                  @map("image_url")
  sortOrder         Int                      @map("sort_order")
  isActive          Boolean                  @default(true) @map("is_active")
  createdAt         DateTime                 @default(now()) @map("created_at")
  areaId            String                   @map("area_id")
  organizationId    String?                  @map("organization_id")
  learnerProgress   LearnerSectionProgress[]
  modules           Module[]
  sectionVocabulary SectionVocabulary[]
  area              Area                     @relation(fields: [areaId], references: [id], onDelete: Cascade)
  organization      Organization?            @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  orgConfigs        OrganizationSectionConfig[]

  @@map("sections")
}

model OrganizationAreaConfig {
  id             String       @id @default(cuid())
  organizationId String       @map("organization_id")
  areaId         String       @map("area_id")
  isVisible      Boolean      @default(true) @map("is_visible")
  sortOrder      Int          @default(0) @map("sort_order")
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  area           Area         @relation(fields: [areaId], references: [id], onDelete: Cascade)

  @@unique([organizationId, areaId])
  @@map("organization_area_configs")
}

model OrganizationSectionConfig {
  id             String       @id @default(cuid())
  organizationId String       @map("organization_id")
  sectionId      String       @map("section_id")
  isVisible      Boolean      @default(true) @map("is_visible")
  sortOrder      Int          @default(0) @map("sort_order")
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  section        Section      @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([organizationId, sectionId])
  @@map("organization_section_configs")
}

model Module {
  id        String           @id @default(cuid())
  sectionId String           @map("section_id")
  type      String
  content   Json?
  attempts  LearnerAttempt[]
  section   Section          @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  questions Question[]

  @@unique([sectionId, type])
  @@map("modules")
}

model Vocabulary {
  id                String              @id @default(cuid())
  word              String
  partOfSpeech      String              @map("part_of_speech")
  definitionEs      String              @map("definition_es")
  exampleSentence   String              @map("example_sentence")
  phoneticIpa       String?             @map("phonetic_ipa")
  stressedSyllable  String?             @map("stressed_syllable")
  audioUrl          String?             @map("audio_url")
  questions         Question[]
  sectionVocabulary SectionVocabulary[]

  @@map("vocabulary")
}

model SectionVocabulary {
  id           String     @id @default(cuid())
  sectionId    String     @map("section_id")
  vocabularyId String     @map("vocabulary_id")
  sortOrder    Int        @map("sort_order")
  section      Section    @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  vocabulary   Vocabulary @relation(fields: [vocabularyId], references: [id], onDelete: Cascade)

  @@unique([sectionId, vocabularyId])
  @@map("section_vocabulary")
}

model Question {
  id            String           @id @default(cuid())
  moduleId      String           @map("module_id")
  vocabularyId  String?          @map("vocabulary_id")
  type          String
  prompt        String
  correctAnswer String?          @map("correct_answer")
  sortOrder     Int              @map("sort_order")
  answers       LearnerAnswer[]
  options       QuestionOption[]
  module        Module           @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  vocabulary    Vocabulary?      @relation(fields: [vocabularyId], references: [id])

  @@map("questions")
}

model QuestionOption {
  id         String          @id @default(cuid())
  questionId String          @map("question_id")
  optionText String          @map("option_text")
  isCorrect  Boolean         @default(false) @map("is_correct")
  sortOrder  Int             @map("sort_order")
  answers    LearnerAnswer[]
  question   Question        @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@map("question_options")
}

model LearnerAttempt {
  id          String          @id @default(cuid())
  userId      String          @map("user_id")
  moduleId    String          @map("module_id")
  score       Float?
  passed      Boolean?
  startedAt   DateTime        @default(now()) @map("started_at")
  completedAt DateTime?       @map("completed_at")
  answers     LearnerAnswer[]
  module      Module          @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("learner_attempts")
}

model LearnerAnswer {
  id               String          @id @default(cuid())
  attemptId        String          @map("attempt_id")
  questionId       String          @map("question_id")
  selectedOptionId String?         @map("selected_option_id")
  answerText       String?         @map("answer_text")
  isCorrect        Boolean         @map("is_correct")
  attempt          LearnerAttempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question         Question        @relation(fields: [questionId], references: [id], onDelete: Cascade)
  selectedOption   QuestionOption? @relation(fields: [selectedOptionId], references: [id])

  @@map("learner_answers")
}

model LearnerSectionProgress {
  id                String    @id @default(cuid())
  userId            String    @map("user_id")
  sectionId         String    @map("section_id")
  introCompleted    Boolean   @default(false) @map("intro_completed")
  practiceCompleted Boolean   @default(false) @map("practice_completed")
  testScore         Float?    @map("test_score")
  testPassed        Boolean   @default(false) @map("test_passed")
  unlocked          Boolean   @default(false)
  unlockedAt        DateTime? @map("unlocked_at")
  section           Section   @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, sectionId])
  @@map("learner_section_progress")
}
